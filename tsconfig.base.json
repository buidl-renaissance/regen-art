{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@gods.work/auth": ["libs/auth/src/index.ts"],
      "@gods.work/community": ["libs/community/src/index.ts"],
      "@gods.work/creations": ["libs/creations/src/index.ts"],
      "@gods.work/forum": ["libs/forum/src/index.ts"],
      "@gods.work/hooks": ["libs/hooks/src/index.ts"],
      "@gods.work/projects": ["libs/projects/src/index.ts"],
      "@gods.work/shadcn": ["libs/shadcn/src/index.ts"],
      "@gods.work/the-word": ["libs/the-word/src/index.ts"],
      "@gods.work/ticketing": ["libs/ticketing/src/index.ts"],
      "@gods.work/ui": ["libs/ui/src/index.ts"],
      "@gods.work/utils": ["libs/utils/src/index.ts"],
      "@gods.work/web3": ["libs/web3/src/index.ts"],
      "@libs/shadcn-ui": ["libs/shadcn-ui/src/index.ts"],
      "@libs/shadcn-ui/*": ["libs/shadcn-ui/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
